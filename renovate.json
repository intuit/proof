{
  "extends": ["@appfabric", "schedule:earlyMondays"],
  "automerge": false,
  "patch": {
    "labels": ["dependency-update"]
  },
  "minor": {
    "labels": ["dependency-update"]
  },
  "major": {
    "labels": ["dependency-update"]
  },
  "digest": {
    "labels": ["dependency-update"]
  },
  "packageRules": [
    {
      "automerge": false,
      "depTypeList": ["devDependencies"],
      "labels": ["dev-dependency", "dependency-update"]
    },
    {
      "packagePatterns": ["auto", "@auto-it"],
      "groupName": "auto"
    },
    {
      "packagePatterns": ["@ids", "@ids-open", "@ids-beta"],
      "groupName": "ids"
    },
    {
      "packagePatterns": ["@fuego"],
      "groupName": "fuego"
    }
  ]
}
